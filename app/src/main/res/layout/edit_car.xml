<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/standardFragmentPadding"
        android:paddingRight="@dimen/standardFragmentPadding"
        android:paddingBottom="@dimen/standardFragmentPadding">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#FFFFFFFF"
            android:elevation="@dimen/standardCardElevation"
            android:padding="0dp"
            android:translationZ="0dp"
            app:cardBackgroundColor="#FFFFFFFF"
            app:cardCornerRadius="2dp"
            app:cardElevation="@dimen/standardCardElevation"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="New car"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/carLicense"
                    android:layout_alignStart="@+id/carLicense"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/carName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@+id/carLicense"
                    android:layout_alignLeft="@+id/carLicense"
                    android:layout_alignStart="@+id/carLicense"
                    android:hint="Car's name"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:singleLine="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="250dp"
                    android:layout_height="65dp"
                    android:background="@drawable/licenseplate"
                    android:paddingLeft="29dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="12dp"
                    android:id="@+id/licensePlate"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:paddingRight="11dp">

                    <TextView
                        android:layout_width="54dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/city"
                        android:textStyle="bold"
                        android:textSize="46dp"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:maxLength="2"
                        android:textColor="#000000"
                        android:layout_marginRight="22dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/number"
                        android:textStyle="bold"
                        android:textSize="46dp"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textAlignment="center" />
                </LinearLayout>

                <RadioGroup
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/radioLicenseGroup">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="New SRB"
                        android:id="@+id/radioNewSrb"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Generic"
                        android:id="@+id/radioGeneric"
                        android:textColor="#000000"
                        android:layout_weight="1" />

                </RadioGroup>

                <EditText
                    android:id="@+id/carLicense"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@+id/text1"
                    android:layout_centerHorizontal="true"
                    android:hint="License number"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/linearLayout"
                    android:layout_marginTop="15dp">


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:id="@+id/DeleteButton"
                        android:visibility="gone" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:id="@+id/CancelButton"
                        android:onClick="openCarFragment" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Done"
                        android:id="@+id/DoneButton"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
