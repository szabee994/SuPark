<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/wrapper">

    <RelativeLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tableContainer"
            android:id="@+id/contentLinear">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/app_name_long"
                android:id="@+id/textView"
                android:layout_gravity="left|center_vertical"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_weight="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/home_text"
                android:id="@+id/textWelcome"
                android:layout_gravity="center"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:layout_marginTop="20dp" />

            <AutoCompleteTextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/lincenseNumber"
                android:layout_gravity="center"
                android:layout_below="@+id/textWelcome"
                android:layout_centerHorizontal="true"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/buttonPark"
                android:layout_gravity="center|top"
                android:src="@drawable/circle_button"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_above="@+id/gridLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="6"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="30dp" />

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/tableContainer"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TableRow
                android:id="@+id/tableRowButtonContainer"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="57dp"
                android:layout_marginBottom="5dp">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonMap"
                    android:src="@drawable/btn1"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonCars"
                    android:src="@drawable/btn2"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonStatistics"
                    android:src="@drawable/btn3"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonEtc"
                    android:src="@drawable/btn4"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_weight="1" />

            </TableRow>
        </TableLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/back_dimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0000000"
        android:visibility="gone"
        android:clickable="true" >
    </RelativeLayout>

</RelativeLayout>
